{
    "name": "@wsu/web-design-system",
    "version": "0.0.1",
    "description": "Web Design System for Washington State University.",
    "private": true,
    "main": "src/index.js",
    "dependencies": {
        "mitt": "^1.2.0"
    },
    "devDependencies": {
        "@babel/core": "^7.8.3",
        "@babel/preset-env": "^7.8.3",
        "@wsu/build-tools": "git+https://github.com/washingtonstateuniversity/wsu-build-tools.git",
        "autoprefixer": "^9.7.4",
        "babel-loader": "^8.0.6",
        "css-loader": "^3.4.2",
        "file-loader": "^4.3.0",
        "markup-inline-loader": "^0.2.3",
        "mini-css-extract-plugin": "^0.8.2",
        "modularscale-sass": "^3.0.8",
        "node-sass": "^4.13.1",
        "optimize-css-assets-webpack-plugin": "^5.0.3",
        "postcss-loader": "^3.0.0",
        "rimraf": "^3.0.2",
        "sass-loader": "^8.0.2",
        "sass": "^1.3.0",
        "webpack": "^4.41.5",
        "webpack-cli": "^3.3.10",
        "webpack-dev-server": "^3.10.1"
    },
    "scripts": {
        "start": "npm run start:components",
        "start:components": "webpack-dev-server --env.NODE_ENV=development --watch --config webpack.config.js",
        "build": "npm run clean && npm run build:bundle && npm run build:components",
        "build:bundle": "webpack --env.NODE_ENV=production --config build.config.js",
        "build:components": "webpack --env.NODE_ENV=production --config webpack.config.js",
        "clean": "rimraf ./components/dist & rimraf ./build/dist"
    },
